                </Image.Style>
            </Image>
        </Button>
        <TextBox x:Name="textBox5" Background="Transparent" Foreground="White" Text="{DynamicResource txt_5}" HorizontalAlignment="Left" Height="127" Margin="37,570,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274"/>
