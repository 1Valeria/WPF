        <Button x:Name="button2" Background="Transparent" Foreground="White" Content="{DynamicResource b_2}" HorizontalAlignment="Left" Height="38" Margin="514,250,0,0" VerticalAlignment="Top" Width="220" Click="button2_Click"/>
